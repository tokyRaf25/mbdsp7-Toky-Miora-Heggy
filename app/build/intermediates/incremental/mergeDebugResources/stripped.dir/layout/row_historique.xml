<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="13dp"
    card_view:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_margin="15dp"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iconeSport"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:src="@drawable/ic_baseline_sports_soccer_32" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="130dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_equipe"
                                android:textSize="14sp"
                                android:layout_marginTop="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Suisse - Espagne" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_categorie_h"
                                android:textColor="@color/colorLayerDark"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Catégorie A" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_champ_h"
                                android:textColor="@color/colorLayerDark"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Résultats du match : 2" />
                        </LinearLayout>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="50dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="10dp"
                            android:orientation="horizontal">
                            <TextView
                                android:textColor="@color/cardview_dark_background"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Status">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_marginStart="11dp"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/txt_status_h"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Perdus">
                            </TextView>
                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:background="#d9d9d9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:background="#D64E58"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_marginLeft="25dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_marginTop="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/cote"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Cote" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:id="@+id/txt_cote_h"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="5.60" />
                            </LinearLayout>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_marginLeft="25dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_marginTop="18dp"
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/white"
                                        android:id="@+id/mise"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="Mise" />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_marginLeft="5dp"
                                        android:textColor="@color/white"
                                        android:textStyle="bold"
                                        android:id="@+id/txt_mise_h"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="5.60" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_marginTop="18dp"
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:id="@+id/gains"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Gains" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_marginLeft="5dp"
                                    android:textColor="@color/white"
                                    android:textStyle="bold"
                                    android:id="@+id/txt_gain_h"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0 Jetons" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
